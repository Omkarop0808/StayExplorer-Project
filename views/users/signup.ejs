<% layout("/layouts/boilerplate") %>
<style>

  /* fullâ€‘screen scenic background (change URL if you want another view) */
  body {
    margin: 0;
    min-height: 100vh;
    background: linear-gradient(
        rgba(255, 255, 255, 0.55),
        rgba(255, 255, 255, 0.75)
      ),
      url("https://images.unsplash.com/photo-1505691938895-1758d7feb511?auto=format&fit=crop&w=1950&q=80")
        no-repeat center/cover fixed;
    font-family: "Segoe UI", sans-serif;
    display: flex;            /* centers signup box */
    align-items: center;
    justify-content: center;
  }

  /* wrapper to keep it off the navbar */
  .signup-wrapper {
    width: 100%;
    max-width: 420px;
    padding: 1rem;
  }

  /* glassy signup card */
  .signup-card {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: 1rem;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.25);
    padding: 2.5rem 2rem;
    color: #fff;
    transition: transform 0.25s ease;
  }
  .signup-card:hover { transform: scale(1.015); }

  .signup-card h1 {
    text-align: center;
    margin-bottom: 2rem;
    font-weight: 700;
    font-size: 1.7rem;
  }

  /* labels & inputs */
  .signup-card label { font-weight: 600; color: #f1f1f1; }

  .signup-card .form-control {
    background: rgba(255, 255, 255, 0.18);
    border: none;
    border-radius: 8px;
    color: #fff;
    padding: 0.6rem 0.75rem;
    margin-bottom: 1.1rem;
  }
  .signup-card .form-control::placeholder { color: #ddd; }
  .signup-card .form-control:focus {
    background: rgba(255, 255, 255, 0.26);
    outline: none;
    box-shadow: 0 0 0 0.18rem rgba(255, 255, 255, 0.25);
  }

  /* signup button */
  .signup-card .btn-success {
    width: 100%;
    background: #ff385c;
    border: none;
    font-weight: 600;
    padding: 0.6rem;
    opacity: 0.85;
    border-radius: 8px;
    transition: opacity 0.25s ease, transform 0.25s ease;
  }
  .signup-card .btn-success:hover {
    opacity: 1;
    transform: translateY(-2px);
  }

  /* footnote */
  .signup-note {
    text-align: center;
    margin-top: 1rem;
    font-size: 0.9rem;
    color: #eee;
  }
</style>
<div class="signup-container">
<div class="row mt-3 ">
    <h1 class="col-6 offset-3">Signup on StayExplorer</h1>
  <div class="col-6 offset-2">
      <form action="/signup" method="POST" novalidate class="needs-validation" >
        <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input  name="username" id="username" type="text" class="form-control" required>
        <div class="valid-feedback">
          Looks good!
        </div>
          <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input  name="email" id="email" type="email"  class="form-control" required>
        </div>
         <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input  name="password" id="password"  class="form-control" required>
        </div>
        <button class="btn btn-success">SignUp</button>
      </form>
  </div>
</div>
</div>
