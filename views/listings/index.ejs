<% layout("/layouts/boilerplate") %><%=success%>


/* GENERAL STYLES */
#filters {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-end; /* move to right on large screen */
  gap: 1rem;
}

.filter {
  text-align: center;
  margin-top: 1rem;
  opacity: 0.7;
  text-decoration: none;
}

.trending {
  margin-left: 0.5rem;
}

.filter a {
  text-decoration: none;
  color: black;
  opacity: 0.7;
}

.icon {
  text-align: center;
}

.filter:hover {
  opacity: 1;
  cursor: pointer;
}

.filter p {
  font-size: 0.7rem;
}

.tax-info {
  display: none;
}

.tax-toggle {
  border: 1px solid black;
  border-radius: 1rem;
  height: 3.25rem;
  padding: 1rem;
  margin-left: 2rem;
  display: flex;
  align-items: center;
}

.active-filter {
  border-bottom: 2px solid blue;
  opacity: 1 !important;
}


/* MOBILE ONLY */
@media (max-width: 768px) {
  #filters {
    display: none; /* hide filters bar */
  }

  #categoryToggleBtn {
    display: block;
    margin: 1rem auto;
  }

  #mobileCategoryMenu {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
  }

  #mobileCategoryMenu .filter {
    flex: 0 1 calc(33.33% - 1rem); /* 3 per row, auto wrap */
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0.5rem 0;
  }

  #mobileCategoryMenu .filter p {
    font-size: 0.7rem;
    margin-bottom: 0;
  }
}

/* DESKTOP ONLY */
@media (min-width: 769px) {
  #categoryToggleBtn,
  #mobileCategoryMenu {
    display: none;
  }

  #filters {
    display: flex !important;
  }
}

<!-- Mobile Category Toggle Button -->
<div class="text-center d-md-none">
  <button class="btn btn-outline-dark" type="button" data-bs-toggle="collapse" data-bs-target="#mobileCategoryMenu" aria-expanded="false" aria-controls="mobileCategoryMenu" id="categoryToggleBtn">
    Categories
  </button>
</div>

<!-- Mobile Collapsible Menu -->
<div class="collapse d-md-none px-3" id="mobileCategoryMenu">
  <div class="d-flex flex-wrap justify-content-center">
    <%- include("./categories") %>
  </div>
</div>



<h2>All Listings</h2>


<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
    <% for (let listing of allListings) { %>
        <div class="col mb-4">
            <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
                <div class="card h-100">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem; object-fit: cover;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong><%= listing.title %></strong><br/><br/>
                           &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                        <i class="tax-info">&nbsp; +18% GST</i>

                        </p>
                    </div>
                </div>
            </a>
        </div>
    <% } %>
</div>

<script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for (let info of taxInfo) {
            if (info.style.display !== "inline") {
                info.style.display = "inline";
            } else {
                info.style.display = "none";
            }
        }
    });
</script>
