<% layout("/layouts/boilerplate") %><%=success%>
<!-- Mobile Category Toggle Button -->
<div class="text-center my-3 d-md-none">
  <button class="btn btn-outline-dark" type="button" data-bs-toggle="collapse" data-bs-target="#mobileCategoryMenu" aria-expanded="false" aria-controls="mobileCategoryMenu" id="categoryToggleBtn">
    Categories
  </button>
</div>

<!-- Mobile Collapsible Menu -->
<div class="collapse d-md-none px-3" id="mobileCategoryMenu">
  <div class="d-flex flex-column">
    <% // re-use your filters markup exactly as-is %>
    <%= include("/partials/categories") %> 
  </div>
</div>


<style>
    #filters {
        display:flex;
        flex-wrap : wrap;
        align-items:center;
    }
    .filter{
        text-align : center;
        margin-right:2rem;
        margin-top : 1rem;
        opacity:0.7;
        text-decoration: none;
        
    }
    .trending{
        margin-left: 0.5rem;
    }
    .filter a{
        text-decoration: none;
        color:black;
        opacity:0.7;
    }
    .icon{
        text-align: center;
    }
    .filter:hover{
        opacity:1;
        cursor:pointer;
    }
    .filter p{
        font-size:0.5rem;
    }
    .tax-info{
        display:none;
    }
    .tax-toggle{
        border:1px solid black;
        border-radius:1rem;
        height:3.25rem;
        padding:1rem;
        margin-left:2rem;
        display:flex;
        align-items:center;

    }
    .active-filter {
      border-bottom: 2px solid blue;
      opacity: 1 !important;

   
}


  /* Hide category icons on small screens */
  @media (max-width: 768px) {
    #filters {
      display: none;
    }
    #categoryToggleBtn {
      display: block;
    }
  }

  /* Show icons again when toggled */
  #mobileCategoryMenu .filter {
    margin: 0.5rem 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  #mobileCategoryMenu .filter p {
    font-size: 1rem;
    margin-bottom: 0;
  }

  /* Hide the toggle button on larger screens */
  @media (min-width: 769px) {
    #categoryToggleBtn,
    #mobileCategoryMenu {
      display: none;
    }
    #filters {
      display: flex !important;
    }
  }

    
</style>
