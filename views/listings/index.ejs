<% layout("/layouts/boilerplate") %><%=success%>



<style>
    #filters {
        display:flex;
        flex-wrap : wrap;
        align-items:center;
    }
    .filter{
        text-align : center;
        margin-right:2rem;
        margin-top : 1rem;
        opacity:0.7;
        text-decoration: none;
        
    }
    .trending{
        margin-left: 0.5rem;
    }
    .filter a{
        text-decoration: none;
        color:black;
        opacity:0.7;
    }
    .icon{
        text-align: center;
    }
    .filter:hover{
        opacity:1;
        cursor:pointer;
    }
    .filter p{
        font-size:0.5rem;
    }
    .tax-info{
        display:none;
    }
    .tax-toggle{
        border:1px solid black;
        border-radius:1rem;
        height:3.25rem;
        padding:1rem;
        margin-left:2rem;
        display:flex;
        align-items:center;

    }
    .active-filter {
      border-bottom: 2px solid blue;
      opacity: 1 !important;

   
}


  /* Hide category icons on small screens */
  @media (max-width: 768px) {
    #filters {
      display: none;
    }
    #categoryToggleBtn {
      display: block;
    }
  }

  /* Show icons again when toggled */
  #mobileCategoryMenu .filter {
    margin: 0.5rem 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  #mobileCategoryMenu .filter p {
    font-size: 1rem;
    margin-bottom: 0;
  }

  /* Hide the toggle button on larger screens */
  @media (min-width: 769px) {
    #categoryToggleBtn,
    #mobileCategoryMenu {
      display: none;
    }
    #filters {
      display: flex !important;
    }
  }

    
</style>

<!-- Mobile Category Toggle Button -->
<div class="text-center my-3 d-md-none">
  <button class="btn btn-outline-dark" type="button" data-bs-toggle="collapse" data-bs-target="#mobileCategoryMenu" aria-expanded="false" aria-controls="mobileCategoryMenu" id="categoryToggleBtn">
    Categories
  </button>
</div>

<!-- Mobile Collapsible Menu -->
<div class="collapse d-md-none px-3" id="mobileCategoryMenu">
  <div class="d-flex flex-column">
    <% // re-use your filters markup exactly as-is %>
    <%- include("listings/categories") %>
  </div>
</div>


<h2>All Listings</h2>


<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
    <% for (let listing of allListings) { %>
        <div class="col mb-4">
            <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
                <div class="card h-100">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem; object-fit: cover;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong><%= listing.title %></strong><br/><br/>
                           &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                        <i class="tax-info">&nbsp; +18% GST</i>

                        </p>
                    </div>
                </div>
            </a>
        </div>
    <% } %>
</div>

<script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for (let info of taxInfo) {
            if (info.style.display !== "inline") {
                info.style.display = "inline";
            } else {
                info.style.display = "none";
            }
        }
    });
</script>
