<script>
  function showAbout() {
    document.getElementById("aboutPopup").style.display = "block";
  }

  function closeAbout() {
    document.getElementById("aboutPopup").style.display = "none";
  }

  // Optional: close popup on outside click
  window.onclick = function (event) {
    const popup = document.getElementById("aboutPopup");
    if (event.target == popup) {
      popup.style.display = "none";
    }
  };
</script>
<script>
  function showDestinations() {
    document.getElementById("destinationsPopup").style.display = "block";
  }

  function closeDestinations() {
    document.getElementById("destinationsPopup").style.display = "none";
  }

  // Optional: click outside to close
  window.onclick = function (event) {
    const aboutPopup = document.getElementById("aboutPopup");
    const destinationsPopup = document.getElementById("destinationsPopup");

    if (event.target == aboutPopup) aboutPopup.style.display = "none";
    if (event.target == destinationsPopup)
      destinationsPopup.style.display = "none";
  };
</script>
